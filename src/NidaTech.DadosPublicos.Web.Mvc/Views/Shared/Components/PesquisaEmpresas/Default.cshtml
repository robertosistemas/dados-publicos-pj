@using NidaTech.DadosPublicos.Web.Views.Shared.Components.PesquisaEmpresas
@model PesquisaEmpresasViewModel
@if (Model.UnidadesFederacao.Count > 1)
{
    <div id="@ViewBag.IdDiv" class="chart">
        <div class="chart">
            <form method="post" asp-controller="@ViewBag.FormController" asp-action="@ViewBag.FormAction">
                <div class="form-group">
                    <input id="@ViewBag.IdPequisarPor" name="@ViewBag.IdPequisarPor" value="@ViewBag.ValorPadrao" type="text" class="form-control" placeholder="Pesquise empresas do Brasil pelo nome ou CNPJ">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="table-responsive">
            <table id="@ViewBag.IdResultado" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Quantidade Ativas</th>
                        <th>Quantidade Inativas</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
}
