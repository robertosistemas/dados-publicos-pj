@using NidaTech.DadosPublicos.Web.Startup
@model NidaTech.DadosPublicos.Services.Dto.UnidadeFederacao
@{
    ViewBag.CurrentPageName = PageNames.UnidadesFederacaoDetalhes;
    Layout = "~/Views/Shared/Layout/Public/_Layout.Public.cshtml";
    ViewBag.Title = L("UnidadesDaFederacaoDetalhes");
    ViewData["Title"] = L("UnidadesDaFederacaoDetalhes");
}
@section scripts
{
    <environment names="Development">
    </environment>
    <environment names="Staging,Production">
    </environment>
}
<header class="text-center text-white masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h2 class="my-0">@L("PessoasJuridicasDoEstado", Model.Nome)</h2>
            </div>
        </div>
    </div>
</header>
<section>
    <div class="container">
        <div class="content my-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header border-transparent">
                            <h3 class="card-title">Resumo</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div>
                                <dl class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Id)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Id)
                                    </dd>
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Nome)
                                    </dd>
                                    <dt class="col-sm-4">
                                        Quantidade Ativas
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.QuantidadeEmpresasAtivas)
                                    </dd>
                                </dl>
                            </div>
                            <div>
                                <a asp-action="Index">@L("Back")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

