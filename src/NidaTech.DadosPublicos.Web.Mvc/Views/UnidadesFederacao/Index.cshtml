@using NidaTech.DadosPublicos.Web.Startup
@using NidaTech.DadosPublicos.Web.Views.Shared.Components.UnidadeFederacao;
@model IEnumerable<NidaTech.DadosPublicos.Services.Dto.UnidadeFederacao>
@{
    ViewBag.CurrentPageName = PageNames.UnidadesFederacao;
    Layout = "~/Views/Shared/Layout/Public/_Layout.Public.cshtml";
    ViewBag.Title = L("UnidadesDaFederacao");
}
@section scripts
{
    <environment names="Development">
    </environment>
    <environment names="Staging,Production">
    </environment>
}
<header class="text-center text-white masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h2 class="my-0">@L("PessoasJuridicasDoBrasil")</h2>
            </div>
        </div>
    </div>
</header>
<section>
    <div class="container">
        <div class="content my-5">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header border-transparent">
                            <h3 class="card-title">Resumo</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            @await Component.InvokeAsync(typeof(UnidadeFederacaoViewComponent), new { id = "Estados" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
